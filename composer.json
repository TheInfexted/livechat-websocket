{
    "name": "julang-network/livechat-websocket",
    "description": "Live Chat System with WebSocket using CodeIgniter 4 and Ratchet",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.4",
        "cboden/ratchet": "^0.4",
        "ratchet/pawl": "^0.3",
        "ratchet/rfc6455": "^0.3",
        "react/mysql": "^0.5",
        "react/socket": "^1.12"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "test": "phpunit",
        "websocket-server": "php websocket/server.php"
    },
    "prefer-stable": true,
    "minimum-stability": "stable"
}